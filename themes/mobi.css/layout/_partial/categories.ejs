<h1 class="text-center"><%= __('title.categories') %></h1>
<ul class="text-muted">
  <% site.categories.sort('-length').forEach((category) => { %>
    <li>
      <a href="<%= category.permalink %>">
        <%= category.name %>
      </a>
      <small>(<%= category.length %>)</small>
    </li>
  <% }) %>
</ul>