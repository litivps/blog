<article>
  <h1 class="text-center">
    <%= page.title %>
  </h1>
  <%- partial('post_meta', { post: page }) %>
  <div class="top-gap-big">
    <%- page.content %>
  </div>
  <div class="top-gap-big text-center text-muted">
    <small>
      <%-
        page.tags.map((tag) =>
          `<a class="text-muted" href="${url_for_lang(tag.path)}">#${tag.name}</a>`).join(' , ')
      %>
    </small>
  </div>
</article>